@model DateSearchViewModel

<div>
    <form method="post" asp-action="SearchByDates" id="date-filter-form">
        <div class="form-group">
            <label asp-for="DepartuteDate" class="control-label"></label>
            <input asp-for="DepartuteDate" class="form-control" id="departure-date" />
            <span asp-validation-for="DepartuteDate" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="ArrivalDate" class="control-label"></label>
            <input asp-for="ArrivalDate" class="form-control" id="arrival-date" />
            <span asp-validation-for="ArrivalDate" class="text-danger" id="arrival-date-error"></span>
        </div>
        <input type="submit" name="Search" value="Найти" />
    </form>
</div>