@model ClientBaseViewModel
@{
    ViewData["Title"] = "GetAllClients";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Просмотр клиентов</h2>
<p>
    <a asp-area="" asp-controller="Client" asp-action="AddClient">Добавить нового клиента</a>
</p>

<form asp-controller="Client" asp-action="SearchClient">
    <p>
        <input type="text" name="SearchString" placeholder="Введите клиента...">
        <input type="submit" name="Search" value="Найти" />
    </p>
</form>

<form asp-controller="Client" asp-action="GetRegularClients">
    <p>
        <input type="submit" name="SearchRegularClients" value="Найти постоянных клиентов" />
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(modelItem => Model.Clients.First().FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => Model.Clients.First().LastName)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => Model.Clients.First().Sex)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => Model.Clients.First().DateOfBirth)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => Model.Clients.First().Passport)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => Model.Clients.First().PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => Model.Clients.First().Email)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => Model.Clients.First().Discount.Type)
            </th>
            <th>
                @Html.DisplayNameFor(modelItem => Model.Clients.First().UserLevel)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Clients)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sex)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateOfBirth)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Passport)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserLevel)
                </td>
                <td>
                    @Html.ActionLink("Изменить", "EditClient", new { id = item.Id }) |
                    @Html.ActionLink("Подробности", "ViewDetails", new { id = item.Id }) |
                    @Html.ActionLink("Удалить", "DeleteClient", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
